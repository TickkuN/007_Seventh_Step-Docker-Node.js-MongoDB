<%- include("./../partials/header"); %>
<div class="card-body">
    <div class="mb-2">
        <h1 class="card-title d-inline me-2"><%= article.title %></h1>
        <div class="card-text d-inline"><%= article.description %></div>
    </div>
    <div class="card-subtitle text-muted mb-2">
        <%= article.createdAt.toLocaleDateString() %>
    </div>
    <div>
        <%- article.sanitizedHtml %>
    </div>
    <a href="/" class="btn btn-secondary">All Articles</a>
    <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
</div>
<%- include("./../partials/footer") %>